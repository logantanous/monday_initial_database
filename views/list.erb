<h1><%= @list.name() %></h1>

<% if @list.tasks().any?() %>
  <h3>Here are all the tasks in this list:</h3>

  <ul>
    <% @list.tasks().each() do |task| %>
      <li><%= task.description() %> </li>
    <% end %>
  </ul>

  <% else %>
    <p>There are no tasks on this list!</p>
  <% end %>

  <h3>Add New Task</h3>

  <form action="/tasks" method="post">
    <div class="form-group">
      <label class="form-label" for='name'>Assign a name to your task:</label>
      <input class="form-control" id='description' name='description' type='text' placeholder="Description Name" autofocus>

      <input id="list_id" name="list_id" type="hidden" value="<%= @list.id() %>">

      <button type="submit" class="button btn">Add task</button>
    </div>
  </form>

